<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Loop" parent="Base.Theme.Loop">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="Theme.Loop.MainActivity" parent="@style/Theme.Loop">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Loop.VideoDetailsActivity" parent="Theme.Loop">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent_black_ten</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>

    <style name="Theme.Loop.VideoPlayerActivity" parent="Theme.Loop">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent_black_ten</item>
    </style>

</resources>